@model AppHotel.Models.Prenotazione

<h2>Elimina Prenotazione</h2>

<h3>Sei sicuro di voler eliminare questa prenotazione?</h3>
<div>
    <h4>Dettagli Prenotazione</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.IdPrenotazione</dd>
        <dt>Data Prenotazione</dt>
        <dd>@Model.DataPrenotazione</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Elimina" class="btn btn-default" />
                @Html.ActionLink("Annulla", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
